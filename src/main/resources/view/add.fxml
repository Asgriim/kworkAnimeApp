<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="350.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddController">
    <children>
        <AnchorPane prefHeight="60.0" prefWidth="350.0" style="-fx-background-color: #1b1b1b;">
            <children>
                <Button fx:id="backButton" layoutX="14.0" layoutY="15.0" mnemonicParsing="false" onAction="#back" style="-fx-background-color: #ec7c26; -fx-background-radius: 6;" text="&lt; Назад">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <Button fx:id="addButton" layoutX="135.0" layoutY="500.0" mnemonicParsing="false" onAction="#add" style="-fx-background-color: #ec7c26; -fx-background-radius: 6;" text="Добавить">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
      <TextField fx:id="nameField" layoutX="82.0" layoutY="141.0" prefHeight="26.0" prefWidth="200.0" promptText="Название" />
      <TextArea fx:id="descriptionField" layoutX="86.0" layoutY="218.0" prefHeight="200.0" prefWidth="200.0" promptText="Описание" />
    </children>
</AnchorPane>
